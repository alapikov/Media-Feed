{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es2022",
        "target": "es2022",
        "jsx": "react",
        "checkJs": false,
        "moduleResolution": "node",
        "rootDir": "./src",
        "removeComments": false,
        "pretty": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules"
    ]
}