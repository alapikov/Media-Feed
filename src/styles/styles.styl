@import './styleReset.styl'
@import './variables.styl'

div
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center

img
    width: 100%
    height: 100%
    object-fit: cover

body
    font-family: 'Roboto'
    font-size: 14px
    flexCenter()

#root
    width: 1280px
    opacity: 0
    transition(opacity, 1.2s, 0s)

#root.appeared
    opacity: 1

#header
    flex(row, space-between, center)
    padding-top: 18px
    padding-bottom 12px
    z-index: 10
    position: fixed
    background-color #fff

#logoMain
    max-width: 64px
    margin-right: 56px
    opacity: 1
    transition(opacity, 0.2s, 0s)

#logoMain:hover
    opacity: 0.8

#searchField
    width: 360px

    div
        width: 100%

#body
    margin-top 160px

#observerTarget
    margin-top 150px

.postItem
    flex(column, flex-start, center)
    width: 420px
    margin-bottom 40px

    .postImgCont img
        object-fit: cover
        border-radius: 20px

    .postImgCont
        width: 100%
        height: 240px
        margin-bottom 15px

    h4.postTitle
        width: 100%
        font-family: 'Montserrat'
        font-size: 25px
        font-weight: 600
        margin-bottom: 10px
        line-height: 30px

    p.postText
        font-size: 16px
        font-weight: 400
        line-height: 22px
        margin-bottom 8px

    p.postAuthor
        width: 100%
        font-size: 16px
        text-align: right
        font-style: italic
        font-weight: 300
        margin-bottom 2px

.postItemIsLoading
    width: 100px
    height: 100px
    margin-bottom 100px

    img
        width: 100%
        height: 100%

p.commentsCounter
    font-family: 'Montserrat'
    font-weight: 500
    font-size: 16px
    width: 100%
    text-align: left
    margin-bottom 16px
    cursor: pointer

.commentItem
    width: 100%
    flex(column, flex-start, start)
    margin-bottom 12px

    p.commentAuthor
        font-weight: 600
        font-size: 12px
        margin-bottom 6px

    p.commentText
        word-break: break-all
