@import './styleReset.styl'
@import './variables.styl'

div
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center

img
    width: 100%
    height: 100%
    object-fit: cover

body
    font-family: 'Roboto'
    font-size: 14px
    flexCenter()

.routerLink 
    text-decoration: none
    cursor: pointer
    color: inherit

#root
    width: 620px
    opacity: 0
    transition(opacity, 1.2s, 0s)

#root.appeared
    opacity: 1

#header
    flex(row, space-between, center)
    padding-top: 18px
    padding-bottom 12px
    z-index: 10
    position: fixed
    background-color #fff
    width: 480px

#logoMain
    max-width: 64px
    opacity: 1
    transition(opacity, 0.2s, 0s)

#logoMain:hover
    opacity: 0.8

#searchField
    width: 300px

    div
        width: 100%

.sortBtn
    cursor pointer
    color: greyMain

#body
    margin-top 120px
    width: 100%

#observerTarget
    margin-top 150px

.postItem
    flex(column, flex-start, center)
    width: 420px
    margin-bottom 40px

    .postImgCont img
        object-fit: cover
        border-radius: 20px

    .postImgCont
        width: 100%
        height: 240px
        margin-bottom 15px

    h4.postTitle
        width: 100%
        font-family: 'Montserrat'
        font-size: 25px
        font-weight: 600
        margin-bottom: 10px
        line-height: 30px

    p.postText
        font-size: 16px
        font-weight: 400
        line-height: 22px
        margin-bottom 8px

    a.postAuthor
        width: 100%
        color: inherit
        font-size: 16px
        text-align: right
        font-style: italic
        font-weight: 300
        margin-bottom 10px
        cursor: pointer
        text-decoration: underline
            

.postItemIsLoading
    width: 100px
    height: 100px
    margin-bottom 100px

    img
        width: 100%
        height: 100%

p.commentsCounter
    font-family: 'Montserrat'
    font-weight: 500
    font-size: 16px
    width: 100%
    text-align: left
    margin-bottom 16px
    cursor: pointer

.commentItem
    width: 100%
    flex(column, flex-start, start)
    margin-bottom 12px

    p.commentAuthor
        font-weight: 600
        font-size: 12px
        margin-bottom 6px

    p.commentText
        word-break: break-all

#profileCont
    flex(row, space-between, center)
    width: 560px
    margin-bottom 32px

    #profilePhoto
        width: 180px
        margin-bottom 31px

    .profileCol
        flex(column, flex-start, flex-end)
        width: 260px

        .profileField
            margin-bottom 15px

        .profileField div 
            padding-left 12px

.backIcon
    margin-top 16px
    color: greyMain

#userPostsTitle
    font-family: 'Montserrat'
    font-weight: 600
    font-size: 24px
    font-style: normal
    margin-bottom 56px
            
    
